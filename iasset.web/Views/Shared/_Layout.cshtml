<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flight Gate Manager</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Flight Gate Manager", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="padding: 20px">

        @RenderBody()
        <footer>
            <p>&copy; @DateTime.Now.Year - Gate Manager - ravi.mohan@roonga.com.au</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")

    @Scripts.Render("~/Scripts/angular.js")
    @Scripts.Render("~/Scripts/app/gateApp.js")
    @Scripts.Render("~/Scripts/app/dataFactory.js")
    @Scripts.Render("~/Scripts/app/gate-controller.js")
    @Scripts.Render("~/Scripts/app/gate-edit-controller.js")
    @RenderSection("scripts", required: false)

    <script src="http://code.jquery.com/jquery-migrate-1.1.0.js"></script>
</body>
</html>
